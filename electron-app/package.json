{
  "name": "recipehub-desktop",
  "version": "1.0.0",
  "description": "Desktop application for RecipeHub - Discover, share, and enjoy delicious recipes",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-client\" \"wait-on http://localhost:5173 http://localhost:5000 && electron .\"",
    "start-backend": "cd ../server && npm start",
    "start-client": "cd ../client && npm run dev",
    "build": "npm run build-client && electron-builder",
    "build-win": "npm run clean-force && npm run build-client && electron-builder --win",
    "build-mac": "npm run clean-force && npm run build-client && electron-builder --mac",
    "build-linux": "npm run clean-force && npm run build-client && electron-builder --linux",
    "build-client": "cd ../client && npm run build",
    "clean": "rimraf dist",
    "clean-force": "taskkill /f /im electron.exe /t 2>nul || true && timeout /t 2 /nobreak >nul && rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.recipehub.desktop",
    "productName": "RecipeHub",
    "copyright": "Copyright Â© 2024 RecipeHub",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "../client/dist",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "RecipeHub"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.food-and-drink"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": "Samuel FOTSO",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.10",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4"
  }
}
